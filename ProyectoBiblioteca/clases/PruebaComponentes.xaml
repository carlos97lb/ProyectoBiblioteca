<Window x:Class="ProyectoBiblioteca.clases.PruebaComponentes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProyectoBiblioteca.clases"
        mc:Ignorable="d"
        Title="PruebaComponentes" Height="450" Width="800">
    <Grid>
        <Label x:Name="label1text" Content="{Binding ElementName=textprueba,Path=Text}" HorizontalAlignment="Left" Margin="308,135,0,0" VerticalAlignment="Top" Width="257"/>
        <TextBox x:Name="textprueba" HorizontalAlignment="Left" Margin="308,185,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="257"/>
        <Button x:Name="botonprueba" Content="Prueba" HorizontalAlignment="Left" Margin="308,284,0,0" VerticalAlignment="Top" Width="257" MouseEnter="botonprueba_MouseEnter"/>
        <Button x:Name="BotonVolver" Content="VOLVER" HorizontalAlignment="Left" Margin="308,53,0,0" VerticalAlignment="Top" Width="257" Click="BotonVolver_Click"/>

    </Grid>
</Window>
