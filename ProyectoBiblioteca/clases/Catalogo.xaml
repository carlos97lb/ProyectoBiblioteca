<Window x:Class="ProyectoBiblioteca.clases.Catalogo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProyectoBiblioteca.clases"
        mc:Ignorable="d"
        Title="Catalogo" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="Datagridcatalogo" HorizontalAlignment="Left" ItemsSource="{Binding Path=listalibro}" AutoGenerateColumns="True" Height="291" VerticalAlignment="Top" Width="792"/>
        <Button x:Name="ButtonVolver" Content="VOLVER" HorizontalAlignment="Left" Margin="99,315,0,0" VerticalAlignment="Top" Width="186" Height="77" Click="ButtonVolver_Click"/>
        <Button x:Name="ButtonPedir" Content="PEDIR" HorizontalAlignment="Left" Margin="507,315,0,0" VerticalAlignment="Top" Width="186" Height="77" Click="ButtonPedir_Click"/>

    </Grid>
</Window>
